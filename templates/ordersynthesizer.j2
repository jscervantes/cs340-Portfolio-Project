{% extends "base.j2" %}

{% block content %}
    <h2>Synthesizer Customer Orders</h2>
    <div id="browse">
      <table>
        {% if data %}
        <thead>
          <tr>
            {% for key in data[0].keys() %}
              <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
            {% endfor %}  
          </tr>
        </thead>
        <tbody>
          {% for item in data %}
          <tr>
              {% for key in item.keys() %}
              <td> {{ item[key] }}</td>
              {% endfor %}
              <form action="delete_orderSynthesizer/{{ item.orderSynthesizerID }}/{{ item.orderItemLinePrice }}/{{ item.orderID }}">
                <td><input type="submit" value="Delete"></td>
              </form>
          </tr>
          {% endfor %}
          <tr>
              <td><button id="add-button" onclick="showAddForm()">Add</button></td>
          </tr>
        </tbody>
        {% endif %}
      </table>
    </div>
   
    <!--insert-->
    <form method="post" id="add-form" style="display: none;">
    <h3>{% block addForm %} Add A Synthesizer Customer Order to Database {% endblock %}</h3>
        <br>
          {% if orderIds %}
            <label for="orderID">Order ID</label>
            <select required id="orderID" name="orderID">
                <option value="" disabled selected>Select the Associated Order</option>
                {% for id in orderIds %}
                  <option value="{{id.orderID}}">OrderID: {{id.orderID}}</option>
                {% endfor %}
            </select>
          {% endif %}
        <br>
          {% if synthesizersNames %}
            <label for="synthesizerID">Synthesizers</label>
            <select required id="synthesizerID" name="synthesizerID">
                <option value="" disabled selected>Select the Synthesizer</option>
                {% for synthesizer in synthesizersNames %}
                  <option value="{{synthesizer.synthesizerID}}">ID: {{synthesizer.synthesizerID}} {{synthesizer.synthesizerName}}</option>
                {% endfor %}
            </select>
          {% endif %}

        <br>
        <label for="quantity">Quantity</label>
        <br>
        <input type="number" 
               id="quantity"
               name="quantity"
               min = "1"
               required>
        <br>
        <input type="submit" value="Add to Order" name="Add_OrderSynthesizer">           
    </form>

   
    <!--update-->
    <div id="edit">
      <form method="post" id="updateOrderSynthesizer">
      <legend><strong>Update A Synthesizer Customer Order in Database</strong></legend>
        <fieldset>
          <br>
          {% if synthOrderIds %}
            <label for="orderSynthesizerID">Synthesizer Order</label>
            <select required id="synthOrderID" name="synthOrderID">
                <option value="" disabled selected>Select the Associated Order</option>
                {% for id in synthOrderIds %}
                  <option value="{{id.orderSynthesizerID}}, {{id.orderID}}">ID: {{id.orderSynthesizerID}} OrderID: {{id.orderID}}</option>
                {% endfor %}
            </select>
          {% endif %}
          <br>
          {% if synthesizersNames %}
            <label for="synthesizerID">Synthesizers</label>
            <select required id="synthesizerID" name="synthesizerID">
                <option value="" disabled selected>Select the Synthesizer</option>
                {% for synthesizer in synthesizersNames %}
                  <option value="{{synthesizer.synthesizerID}}">ID: {{synthesizer.synthesizerID}} {{synthesizer.synthesizerName}}</option>
                {% endfor %}
            </select>
          {% endif %}

          <br>
          <label for="quantity">Quantity</label>
          <br>
          <input type="number" 
                 id="quantity"
                 name="quantity"
                 min = "1"
                 required>
          <br>
          <label for="unit-price">Unit Price</label>
          <br>
          <input type="text" 
                 id="unit-price"
                 name="unit-price"
                 placeholder="unit-price"
                 value="{{ request.form['unit-price'] }}"
                 min="0"
                 max="10"
                 required>
          <br>
          
        </fieldset>   
        			<input type="submit" value="Update" name="Update_OrderSynthesizer">           
      </form>
    </div>
    
 <script>
function orderSynthesizerSearch() {
  var orderSelectionID, filter, table, tr, td, i, dropDownValue;
  orderSelectionID = document.getElementById("orderSynthesizerTableInput");
  filter = orderSelectionID.value.toUpperCase();
  table = document.getElementById("orderSynthesizerTable");
  tr = table.getElementsByTagName("tr");

  // Loop through all table rows, and hide those who don't match the search query
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[1];
    if (td) {
      dropDownValue = td.textContent || td.innerText;
      if (dropDownValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
}
</script>

<script>
 function deleteRow(r) {
  var i = r.parentNode.parentNode.rowIndex;
  document.getElementById("orderSynthesizerTable").deleteRow(i);
} 
 function showUpdateForm() {
  document.getElementById('update-form').style.display = 'block';
 }
 function showAddForm() {
  document.getElementById('add-form').style.display = 'block';
 }
</script>
{% endblock content %}